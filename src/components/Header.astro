---
import { NAME, SITE_NAVIGATION } from "../constants";

const { current = 'home' } = Astro.props;
const navigationEntries = SITE_NAVIGATION;
---

<header class="header sticky top-0">
    <nav class="bg-white dark:bg-gray-900 dark:border-gray-700">
        <div class="max-w-[1120px] flex flex-wrap items-center justify-between mx-auto px-4 py-3 sm:p-4 sm:px-4 sm:py-6">
          <a href="/" class="flex items-center space-x-3 rtl:space-x-reverse">
              <span class="self-center text-xl sm:text-2xl uppercase font-medium tracking-widest whitespace-nowrap hover:text-neutral-600 dark:text-white">{NAME}</span>
          </a>

          <!-- mobile menu button -->
          <button data-collapse-toggle="navbar-dropdown" type="button" class="inline-flex items-center p-2 w-10 h-10 justify-center text-sm text-gray-500 rounded-md lg:hidden hover:bg-gray-100 focus:outline-none focus:ring-2 focus:ring-gray-200 dark:text-gray-400 dark:hover:bg-gray-700 dark:focus:ring-gray-600" aria-controls="navbar-dropdown" aria-expanded="false">
              <span class="sr-only">Open main menu</span>
              <svg class="w-5 h-5" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 17 14">
                  <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M1 1h15M1 7h15M1 13h15"/>
              </svg>
          </button>
          <div id="navbar-dropdown" class="hidden w-full lg:block lg:w-auto">
            <ul class="flex flex-col font-medium p-4 lg:p-0 mt-4 border border-gray-100 rounded-md bg-gray-50 lg:space-x-8 rtl:space-x-reverse lg:flex-row lg:mt-0 lg:border-0 lg:bg-white dark:bg-gray-800 lg:dark:bg-gray-900 dark:border-gray-700">
              {navigationEntries.map(navEntry => ( 
                <div>
                  {navEntry.hasOwnProperty('submenu') ?
                  
                  <li class="lg:hidden text-gray-900 rounded hover:bg-gray-100 lg:hover:bg-transparent lg:border-0 lg:hover:text-blue-800 lg:p-0 dark:text-white lg:dark:hover:text-blue-500 dark:hover:bg-gray-700 dark:hover:text-white lg:dark:hover:bg-transparent">
                    <div class={current === navEntry.name ? 'flex items-center justify-between mx-auto py-2 px-3 text-white bg-blue-800 rounded lg:bg-transparent lg:text-blue-800 lg:p-0 lg:dark:text-blue-500 dark:bg-blue-600 lg:dark:bg-transparent' : 'flex items-center justify-between mx-auto py-2 px-3 text-gray-900 rounded hover:bg-gray-100 lg:hover:bg-transparent lg:border-0 lg:hover:text-blue-800 lg:p-0 dark:text-white lg:dark:hover:text-blue-500 dark:hover:bg-gray-700 dark:hover:text-white lg:dark:hover:bg-transparent'}>
                      <a href={navEntry.href} class="capitalize">{navEntry.name}</a>
                      <button id="dropdownNavbarLinkMobile" data-collapse-toggle="dropdownNavbarMobile" type="button" class="flex items-center py-2 px-3 text-gray-900 rounded  lg:hover:bg-transparent lg:border-0 lg:hover:text-blue-800 lg:p-0 lg:w-auto dark:text-white lg:dark:hover:text-blue-500 dark:focus:text-white dark:border-gray-700 dark:hover:bg-gray-700 lg:dark:hover:bg-transparent">
                        <svg xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/lgink" fill="currentColor" class={current === navEntry.name ? 'w-2.5 h-2.5 ms-2.5 text-white transition-transform duration-300 ease-in-out' : 'w-2.5 h-2.5 ms-2.5 transition-transform duration-300 ease-in-out'} viewBox="0 0 448 512">
                          <path fill="currentColor" d="M441.9 167.3l-19.8-19.8c-4.7-4.7-12.3-4.7-17 0L224 328.2 42.9 147.5c-4.7-4.7-12.3-4.7-17 0L6.1 167.3c-4.7 4.7-4.7 12.3 0 17l209.4 209.4c4.7 4.7 12.3 4.7 17 0l209.4-209.4c4.7-4.7 4.7-12.3 0-17z"/>
                        </svg>
                      </button>
                    </div>

                    <div id="dropdownNavbarMobile" class="z-10 hidden font-normal divide-y divide-gray-100 rounded-md dark:bg-gray-700 dark:divide-gray-600">
                      <ul class="py-2 text-sm text-gray-700 dark:text-gray-400" aria-labelledby="dropdownLargeButton">
                        {navEntry.submenu!.map(submenuEntry => (
                          <li>
                            <a href={submenuEntry.href} class="block px-4 py-2 capitalize hover:bg-gray-100 lg:hover:bg-transparent lg:border-0 lg:hover:text-blue-800 lg:p-0 dark:text-white lg:dark:hover:text-blue-500 dark:hover:bg-gray-700 dark:hover:text-white lg:dark:hover:bg-transparent">{submenuEntry.name}</a>
                          </li>
                        ))}

                      </ul>
                    </div>
                  </li>

                  <li class="max-lg:hidden group">
                    <a href={navEntry.href}>
                      <button id="dropdownNavbarLink" data-popover-target="dropdownNavbar" data-popover-placement="bottom" type="button" class="flex items-center justify-between w-full capitalize py-2 px-3 text-gray-900 rounded hover:bg-gray-100 lg:hover:bg-transparent lg:border-0 lg:hover:text-blue-800 lg:p-0 lg:w-auto dark:text-white lg:dark:hover:text-blue-500 dark:focus:text-white dark:border-gray-700 dark:hover:bg-gray-700 lg:dark:hover:bg-transparent">
                        <span class={current === navEntry.name ? 'block py-2 px-3 capitalize text-white bg-blue-800 rounded lg:bg-transparent lg:text-blue-800 lg:p-0 lg:dark:text-blue-500 dark:bg-blue-600 lg:dark:bg-transparent' : 'block py-2 px-3 capitalize text-gray-900 rounded hover:bg-gray-100 lg:hover:bg-transparent lg:border-0 lg:hover:text-blue-800 lg:p-0 dark:text-white lg:dark:hover:text-blue-500 dark:hover:bg-gray-700 dark:hover:text-white lg:dark:hover:bg-transparent'}>{navEntry.name}</span>
                        <svg xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/lgink" fill="currentColor" class="w-2.5 h-2.5 ms-2.5 transition-transform duration-300 ease-in-out group-hover:-rotate-180" viewBox="0 0 448 512">
                          <path fill="currentColor" d="M441.9 167.3l-19.8-19.8c-4.7-4.7-12.3-4.7-17 0L224 328.2 42.9 147.5c-4.7-4.7-12.3-4.7-17 0L6.1 167.3c-4.7 4.7-4.7 12.3 0 17l209.4 209.4c4.7 4.7 12.3 4.7 17 0l209.4-209.4c4.7-4.7 4.7-12.3 0-17z"/>
                        </svg>
                      </button>
                    </a>

                      <div id="dropdownNavbar" class="absolute z-10 invisible inline-block font-normal bg-white divide-y divide-gray-100 rounded-md shadow w-44 dark:bg-gray-700 dark:divide-gray-600">
                          <ul class="py-2 text-sm text-gray-700 dark:text-gray-400" aria-labelledby="dropdownLargeButton">
                            {navEntry.submenu!.map(submenuEntry => (
                              <li>
                                <a href={submenuEntry.href} class="block px-4 py-2 capitalize hover:bg-gray-100 dark:hover:bg-gray-600 dark:hover:text-white">{submenuEntry.name}</a>
                              </li>
                            ))}
                          </ul>
                      </div>
                  </li>
                  :
                  <li>
                    <a href={navEntry.href} class={current === navEntry.name ? 'block py-2 px-3 capitalize text-white bg-blue-800 rounded lg:bg-transparent lg:text-blue-800 lg:p-0 lg:dark:text-blue-500 dark:bg-blue-600 lg:dark:bg-transparent' : 'block py-2 px-3 capitalize text-gray-900 rounded hover:bg-gray-100 lg:hover:bg-transparent lg:border-0 lg:hover:text-blue-800 lg:p-0 dark:text-white lg:dark:hover:text-blue-500 dark:hover:bg-gray-700 dark:hover:text-white lg:dark:hover:bg-transparent'} aria-current="page">{navEntry.name}</a>
                  </li>}
                </div>
                
              ))}

            </ul>
          </div>
        </div>
      </nav>
      
</header>

<style>
    * {
        @apply font-serif;
    }

    header {
      z-index: 1
    }
</style>