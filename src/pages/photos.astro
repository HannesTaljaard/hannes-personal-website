---
import { NAME } from "../constants";
import Layout from '../layouts/Layout.astro';
import { Image } from 'astro:assets';
import ribbonPhotos from '../images/Ribbon-I-2.webp';
import { getCollection } from "astro:content";
import type { CollectionEntry } from "astro:content";

const title = 'Photos - ' + NAME;
const description = "Photos"; // TODO
---

<Layout title = {title}, description={description} current="information">
    <div class="container max-w-[1120px] flex flex-col items-start mx-auto p-4">
        <Image src={ribbonPhotos} alt="Ribbon Photos" />

        <h1 class="text-3xl lg:text-5xl font-bold font-sans mt-10 mb-8">Photos in High-Resolution</h1>

        <!-- <div id="lightgallery">
            <a href="images/main-picture.jpeg">
                <img alt=".." src="images/main-picture.jpeg" />
            </a>
            <a href="images/main-picture.jpeg">
                <img alt=".." src="images/main-picture.jpeg" />
            </a>
        </div> -->

        <div id="my-gallery" class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4">
            <a
              href="/images/hq-photos/Hannes-Taljaard_face.jpg"
              data-pswp-width="3543"
              data-pswp-height="2362"
              data-cropped="true" 
              target="_blank"
            >
              <img
                class="aspect-square object-cover"
                src="/images/hq-photos/Hannes-Taljaard_face.jpg"
                alt="Close-up of Hannes Taljaard's face"
              />
            </a>

            <a
            href="/images/hq-photos/Hannes-Taljaard_torso.jpg"
            data-pswp-width="2362"
            data-pswp-height="3543"
            data-cropped="true" 
            target="_blank"
          >
            <img
              class="aspect-square object-cover"
              src="/images/hq-photos/Hannes-Taljaard_torso.jpg"
              alt="Hannes Taljaard torso portrait"
            />
          </a>

          <a
          href="/images/hq-photos/Hannes-Taljaard_sitting-at-piano.jpg"
          data-pswp-width="2362"
          data-pswp-height="3543"
          data-cropped="true" 
          target="_blank"
        >
          <img
            class="aspect-square object-cover"
            src="/images/hq-photos/Hannes-Taljaard_sitting-at-piano.jpg"
            alt="Hannes Taljaard sitting at the piano"
          />
        </a>

        <a
          href="/images/hq-photos/Hannes-Taljaard_standing-at-piano.jpg"
          data-pswp-width="2362"
          data-pswp-height="3543"
          data-cropped="true" 
          target="_blank"
        >
          <img
            class="aspect-square object-cover"
            src="/images/hq-photos/Hannes-Taljaard_standing-at-piano.jpg"
            alt="Hannes Taljaard standing at the piano"
          />
        </a>

          <a
          href="/images/hq-photos/Hannes-Taljaard_arms-out.jpg"
          data-pswp-width="3543"
          data-pswp-height="2362"
          data-cropped="true" 
          target="_blank"
          >
            <img
              class="aspect-square object-cover"
              src="/images/hq-photos/Hannes-Taljaard_arms-out.jpg"
              alt="Hannes Taljaard with arms outstretched"
            />
          </a>

            <a
              href="/images/hq-photos/Hannes-Taljaard_hands-crossed.jpg"
              data-pswp-width="3543"
              data-pswp-height="2362"
              data-cropped="true" 
              target="_blank"
            >
              <img
                class="aspect-square object-cover"
                src="/images/hq-photos/Hannes-Taljaard_hands-crossed.jpg"
                alt="Hannes Taljaard with hands crossed"
              />
            </a>

            <a
              href="/images/hq-photos/Hannes-Taljaard_look-down.jpg"
              data-pswp-width="2362"
              data-pswp-height="3543"
              data-cropped="true" 
              target="_blank"
            >
              <img
                class="aspect-square object-cover"
                src="/images/hq-photos/Hannes-Taljaard_look-down.jpg"
                alt="Hannes Taljaard looking down"
              />
            </a>

          </div>

          <p class="text-gray-500 text-xs pt-4">Click to view, right-click and then select 'Save As' to download.</p>
    </div>
</Layout>

<script>
    import PhotoSwipeLightbox from 'photoswipe/lightbox';
    import 'photoswipe/style.css';

    const lightbox = new PhotoSwipeLightbox({
        gallery: '#my-gallery',
        children: 'a',
        pswpModule: () => import('photoswipe')
    });

    lightbox.init();
</script>